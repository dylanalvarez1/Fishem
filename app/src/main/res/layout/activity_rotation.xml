<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RotationActivity">
    <LinearLayout android:paddingTop="20sp" android:orientation="vertical" android:gravity="center" android:background="#ffffff" android:layout_gravity="center" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20sp" android:text="Current Acceleration:" android:layout_marginBottom="10sp" android:layout_marginTop="30sp"/>


        <LinearLayout android:orientation="horizontal" android:gravity="center|top" android:background="#ffffff" android:layout_height="match_parent" android:layout_width="match_parent">


            <LinearLayout android:orientation="vertical" android:gravity="center" android:background="#ffffff" android:layout_height="wrap_content" android:layout_width="0sp" android:layout_weight="0.33">

                <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15sp" android:text="X-Axis" android:layout_marginTop="10sp"/>

                <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15sp" android:text="0.0" android:layout_marginTop="10sp" android:id="@+id/currentX"/>

            </LinearLayout>


            <LinearLayout android:orientation="vertical" android:gravity="center" android:background="#ffffff" android:layout_height="wrap_content" android:layout_width="0sp" android:layout_weight="0.33">

                <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15sp" android:text="Y-Axis" android:layout_marginTop="10sp"/>

                <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15sp" android:text="0.0" android:layout_marginTop="10sp" android:id="@+id/currentY"/>

            </LinearLayout>


            <LinearLayout android:orientation="vertical" android:gravity="center" android:background="#ffffff" android:layout_height="wrap_content" android:layout_width="0sp" android:layout_weight="0.33">

                <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15sp"
                    android:text="Z-Axis" android:layout_marginTop="10sp"/>

                <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15sp" android:text="0.0" android:layout_marginTop="10sp" android:id="@+id/currentZ"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>